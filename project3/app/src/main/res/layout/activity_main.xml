<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numbertwo"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="201dp"
        android:ems="10"
        android:inputType="number"
        android:text="s2"
        app:layout_constraintBottom_toTopOf="@+id/resultxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberone" />

    <TextView
        android:id="@+id/resultxt"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="70dp"
        android:text="result:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbertwo" />

    <EditText
        android:id="@+id/numberone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:inputType="number"
        android:text="s1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/numbertwo"
        app:layout_constraintStart_toStartOf="@+id/numbertwo"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="278dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberone">

        <Button
            android:id="@+id/cıkar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-" />

        <Button
            android:id="@+id/artı"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+" />

        <Button
            android:id="@+id/carp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*" />

        <Button
            android:id="@+id/bol"
            android:layout_width="70dp"
            android:layout_height="64dp"
            android:text="/" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>